<div class="task-card">
  <h1><%= @task.title %></h1>
  <p class="task-details"><%= @task.details %></p>
  <p class="task-completed"><%= @completed %></p>
</div>
<div class="buttons">
  <h3><%= link_to 'Edit', edit_task_path(@task) %></h3>
  <h3><%= link_to 'Delete', task_path(@task), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %></h3>
  <h3><%= link_to 'Back', tasks_path %></h3>
</div>
